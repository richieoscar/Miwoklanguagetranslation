<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.richieoscar.miwok">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_miwok"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_miwok_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Miwok">
        <activity
            android:label="@string/about_miwok"
            android:name=".ui.AboutActivity"
            android:parentActivityName=".ui.MainActivity"></activity>
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/myTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MainActivity"></activity>
    </application>

</manifest>